{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./dist/*", "./node_modules/*", "./coverage"],
		"include": ["src/**/*"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noDebugger": "off",
				"noConsoleLog": "info",
				"noExplicitAny": "off"
			},
			"style": {
				"useImportType": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
